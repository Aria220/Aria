<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.yixutech.library.mapper.UserMapper">
	<!-- 增加用户数据 -->
	<insert id="insert" parameterType="com.yixutech.library.entity.User" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_user(
			username,password,salt,realname,email,phone,gender,birthday
		) VALUES (
			#{username},#{password},#{salt},#{realname},#{email},#{phone}
			,#{gender},#{birthday}
		)
	</insert>
	<!-- 根据用户名查找用户数据 -->
	<select id="findUserByUsername"
		resultType="com.yixutech.library.entity.User">
		SELECT
			id,username,password,salt,realname,email,phone,gender,birthday
		FROM
			t_user
		WHERE
			username=#{username}
	</select>
	<!-- 根据id查找用户数据 -->
	<select id="findUserById"
		resultType="com.yixutech.library.entity.User">
		SELECT
			id,username,password,salt,realname,email,phone,gender,birthday
		FROM
			t_user
		WHERE
			id=#{id}
	</select>
	<!-- 查询所有数据 -->
	<select id="findAllUsers" resultType="com.yixutech.library.entity.User">
		SELECT
			id,username,password,salt,realname,email,phone,gender,birthday
		FROM
			t_user
	</select>
	<!-- 修改密码 -->
	<update id="changePassword" parameterType="com.yixutech.library.entity.User">
		UPDATE
			t_user
		SET
			password=#{password}
		WHERE
			id=#{id}
	</update>
	<!-- 修改个人信息 -->
	<!-- <update id="changeInfo">
		UPDATE
			t_user
		SET
			<if test="username!=null">
			username=#{username},
			</if>
			gender=#{gender},
			<if test="phone!=null">
			phone=#{phone},
			</if>	
			<if test="email!=null">
			email=#{email},
			</if>
	</update> -->
	<!-- 删除数据 -->
	<delete id="delete" parameterType="com.yixutech.library.entity.User">
		DELETE From
			t_user
		WHERE
			id=#{id}
	</delete>
</mapper>









