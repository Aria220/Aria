<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.yixutech.library.mapper.BookMapper">
	<!-- 增加书本数据 -->
	<insert id="insert" parameterType="com.yixutech.library.entity.Book" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_book(
			name,author,amount,borrow_count
		) VALUES (
			#{name},#{author},#{amount},#{borrowCount}
		)
	</insert>
	<!-- 根据id查找书本数据 -->
	<select id="findBookById"
		resultType="com.yixutech.library.entity.Book">
		SELECT
			id,name,author,amount,borrow_count AS borrowCount
		FROM
			t_book
		WHERE
			id=#{id}
	</select>
	<!-- 查询所有数据 -->
	<select id="getBookList" resultType="com.yixutech.library.entity.Book">
		SELECT
			id,name,author,amount,borrow_count AS borrowCount
		FROM
			t_book
	</select>
	
